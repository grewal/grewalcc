# templates/consul.hcl.j2
# Deployed by Ansible

data_dir = "/consul/data"

# Non-dev server mode
server = true
bootstrap_expect = 1

# Host networking configuration - use the internal IP variable
bind_addr = "{{ consul_host_ip }}"
advertise_addr = "{{ consul_host_ip }}"
client_addr = "{{ consul_host_ip }}"

# Enable UI
ui_config {
  enabled = true
}

# Enable DNS Interface on standard port 8600 (UDP/TCP)
ports {
  dns = 8600
}

# Note: HTTP API defaults to 8500

log_level = "INFO"
# enable_syslog = true
